@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar Usuario";
    var roles = (List<IdentityRole>)ViewData["roles"];
}

<div class="mb-1 p-3 m-0 text-center bgVidro rounded">
    <h1>Cadastro de Usuario</h1>
    <hr />
</div>


<div class="container-fluid m-0 p-0 justify-content-center bgVidro rounded">
    <div class="row px-3 py-4  justify-content-center">
        <div class="col-8 col-sm-8 col-md-8 col-lg-8">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <div class="row">
                        <div class="col-2 col-sm-2 col-md-2 col-lg-2 pe-0 border border-1 border-warning rounded ">
                            <label asp-for="Input.Email" class="control-label text-white mt-1 ">E-mail:</label>
                        </div>
                        <div class="col-8 col-sm-8 col-md-8 col-lg-8">
                            <input asp-for="Input.Email" class="form-control text-white bg-transparent btn-outline-warning" autocomplete="username" aria-required="true" />
                        </div>
                            <span asp-validation-for="Input.Email" class="text-warning"></span>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <div class="row">
                        <div class="col-2 col-sm-2 col-md-2 col-lg-2 pe-0 border border-1 border-warning rounded ">
                            <label asp-for="Input.Password" class="control-label text-white mt-1">Senha:</label>
                        </div>
                        <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                            <input asp-for="Input.Password" class="form-control text-white bg-transparent btn-outline-warning" autocomplete="new-password" aria-required="true"/>
                        </div>
                            <span asp-validation-for="Input.Password" class="text-warning"></span>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <div class="row">
                        <div class="col-3 col-sm-3 col-md-3 col-lg-3 pe-0 border border-1 border-warning rounded ">
                            <label asp-for="Input.ConfirmPassword" class="control-label text-white mt-1 text-center"> Confirmar Senha:</label>
                        </div>
                        <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                            <input asp-for="Input.ConfirmPassword" class="form-control text-white bg-transparent btn-outline-warning" autocomplete="new-password" aria-required="true" />
                        </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-warning"></span>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <div class="row">
                        <div class="col-3 col-sm-3 col-md-3 col-lg-3 pe-0 border border-1 border-warning rounded ">
                            <label class="control-label text-white mt-1 text-center">
                                Tipo de usuario:
                            </label>
                        </div>
                        <div class="col-3 col-sm-3 col-md-3 col-lg-3">
                            <select asp-for="Input.Name" class="form-control text-center text-white bg-transparent btn-outline-warning" asp-items='new SelectList(roles,"Id","Name")'></select>
                        </div>
                            <span asp-validation-for="Input.Name" class="text-warning"></span>
                    </div>
                </div>
                <div class="form-floating">
                    <div class="row justify-content-center">
                        <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                            <button id="registerSubmit" type="submit" class="btn w-100 btn-secondary btn-outline-warning text-white">Registrar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
