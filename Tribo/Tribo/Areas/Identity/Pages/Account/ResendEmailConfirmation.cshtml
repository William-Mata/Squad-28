@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar confirmação de e-mail";
}



<div class="row justify-content-center">
    <div class="col-6 col-sm-6 col-md-6 col-lg-6 text-center p-4 bgVidro">
        <h1>Confirmação de E-mail</h1>
        <hr />
    </div>
</div>


<div class="row justify-content-center">
    <div class="col-6 col-sm-6 col-md-6 col-lg-6 px-3 py-4 bgVidro">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-3">
                <div class="row justify-content-center">
                    <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded ">
                        <label asp-for="Input.Email" class="control-label text-white mt-1">E-mail:</label>
                    </div>
                    <div class="col-8 col-sm-8 col-md-8 col-lg-8">
                        <input asp-for="Input.Email" class="form-control text-white bg-transparent btn-outline-warning" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating">
                <div class="row justify-content-center">
                    <div class="col-4 col-sm-4 col-md-4 col-lg-4">
                        <button type="submit" class="btn w-100 btn-secondary mx-auto btn-outline-warning text-white">Confirmar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
        }
