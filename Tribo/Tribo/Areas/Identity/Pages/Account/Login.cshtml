@page
@model LoginModel

@{
    ViewData["Title"] = "Acessar a Conta";
}


<div class="row justify-content-center">
    <div class="col-6 col-sm-6 col-md-6 col-lg-6 text-center p-4 bgVidro">
        <h1>Login de Usuario</h1>
        <hr />
    </div>
</div>


<div class="row justify-content-center ">
    <div class="col-6 col-sm-6 col-md-6 col-lg-6 py-4  bgVidro">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <div class="row justify-content-center">
                    <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded ">
                        <label asp-for="Input.Email" class="control-label text-white mt-1 ">E-mail:</label>
                    </div>
                    <div class="col-8 col-sm-8 col-md-8 col-lg-8">
                        <input asp-for="Input.Email" class="form-control bgVidro text-white btn-outline-warning" placeholder="Email" autocomplete="username" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floatin mt-2">
                <div class="row justify-content-center">
                    <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded ">
                        <label asp-for="Input.Password" class="control-label text-white mt-1">Senha:</label>
                    </div>
                    <div class="col-8 col-sm-8 col-md-8 col-lg-8">
                        <input asp-for="Input.Password" class="form-control bgVidro text-white btn-outline-warning" placeholder="Senha" autocomplete="current-password" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="checkbox mt-2">
                <div class="row justify-content-center">
                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                        <label asp-for="Input.RememberMe" class="form-label"></label>
                    </div>
                    <div class="col-7 col-sm-7 col-md-7 col-lg-7">
                        <input class="form-check-input bgVidro text-white btn-outline-warning mt-2" asp-for="Input.RememberMe" />

                    </div>
                </div>
            </div>
            <div class="form-floating">
                <div class="row justify-content-center">
                    <div class="col-4 col-sm-4 col-md-4 col-lg-4">
                        <button id="login-submit" type="submit" class="btn w-100 btn-secondary btn-outline-warning text-white btn-round mb-4 mt-3">
                            Login
                        </button>
                    </div>
                </div>
            </div>
            <div class="text-center text-white">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-white">Esqueceu sua senha?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">Criar novo usuario.</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-white">Confirmar Conta.</a>
                </p>
            </div>
        </form>

    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

