@model global::Tribo.Models.Cliente
@{
    ViewData["Title"] = "Cadastro de Cliente";
}
<div class="mb-1 p-0 m-0 text-center bgVidro rounded">
    <h1>Cadastro de Cliente</h1>
    <hr />
</div>


<div class="w-100 m-0 p-0 justify-content-center bgVidro rounded">
    <div class="row px-3 py-4 m-0">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <form asp-action="CadastrarCliente">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded">
                            <label asp-for="Nome" class="control-label text-white mt-1 text-center">
                                Nome Completo:
                            </label>
                        </div>
                        <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                            <input asp-for="Nome"
                                   class="form-control text-white bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="Nome" class="text-warning"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-1 col-sm-1 col-md-1 col-lg-1 border border-1 border-warning rounded ">
                            <label asp-for="Email" class="control-label text-white mt-1">
                                E-mail:
                            </label>
                        </div>
                        <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                            <input asp-for="Email"
                                   class="form-control text-white bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>
                </div>
                 <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-1 col-sm-1 col-md-1 col-lg-1 border border-1 border-warning rounded ">
                            <label asp-for="CPF" class="control-label text-white mt-1">CPF:</label>
                        </div>
                        <div class="col-4 col-sm-4 col-md-4 col-lg-4">
                            <input asp-for="CPF" type="number" min="10000000000" max="99999999999"
                                   class="form-control text-white bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="CPF" class="text-warning"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-1 col-sm-1 col-md-1 col-lg-1 border border-1 border-warning rounded ">
                            <label asp-for="Senha" class="control-label text-white mt-1">
                                Senha:
                            </label>
                        </div>
                        <div class="col-3 col-sm-3 col-md-3 col-lg-3 ">
                            <input asp-for="Senha" type="password"
                                   class="form-control text-white bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="Senha" class="text-warning"></span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-1 col-sm-1 col-md-1 col-lg-1 border border-1 border-warning rounded ">
                            <label asp-for="Idade" class="control-label text-white mt-1">Idade:</label>
                        </div>
                        <div class="col-1 col-sm-1 col-md-1 col-lg-1">
                            <input asp-for="Idade"
                                   class="form-control text-white bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="Idade" class="text-warning"></span>
                    </div>
                </div>
               
                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-1 col-sm-1 col-md-1 col-lg-1">
                            <input type="submit" value="Cadastrar" class="btn btn-md btn-secondary btn-outline-warning text-white m-0" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
        @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        }
