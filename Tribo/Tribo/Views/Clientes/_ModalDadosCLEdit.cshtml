@model Cliente


<div class="modal fade bg-transparent" id="editarModalClDa">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content bgVidro">
            <div class="modal-header">
                <h5 class="modal-title" id="editarModalLabel">Alterar Dados do Cliente</h5>
                <button type="button" class="btn btn-secondary btn-outline-warning text-white" data-bs-dismiss="modal"
                        aria-label="Close">X</button>
            </div>
            <div class="modal-body m-0 p-0">

                <form asp-action="EditDadosCliente" class="m-0 p-0">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row py-2">
                        <div class="col-11 col-sm-11 col-md-11 col-lg-11 px-5 ">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <input type="hidden" asp-for="IdCliente" />
                                        <label asp-for="Nome" class="control-label text-white mt-1">Nome:</label>
                                    </div>
                                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 ">
                                        <input asp-for="Nome" class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Nome" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Email" class="control-label text-white mt-1">Email:</label>
                                    </div>
                                    <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                                        <input asp-for="Email"
                                               class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Senha" class="control-label text-white mt-1">Senha:</label>
                                    </div>
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3">
                                        <input asp-for="Senha" type="password" placeholder="***********"
                                               class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Senha" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Idade" class="control-label text-white mt-1">Idade:</label>
                                    </div>
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3">
                                        <input asp-for="Idade"
                                               class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Idade" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="row">
                                    <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded ">
                                        <label asp-for="CPF" class="control-label text-white mt-1">CPF:</label>
                                    </div>
                                    <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                                        <input asp-for="CPF" type="number" min="10000000000" max="99999999999"
                                               class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="CPF" class="text-warning"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                            <button type="submit" data-bs-save="modal" class="btn btn-secondary btn-outline-warning text-white">Alterar</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
