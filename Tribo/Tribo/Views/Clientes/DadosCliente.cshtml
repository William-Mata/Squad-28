@model IEnumerable<Cliente>

@{
    ViewData["Title"] = "Dados do Cliente";
}

<h1>Dados Cliente</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacote.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacote.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacote.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacote.DataFim)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    R$ @Html.DisplayFor(modelItem => item.Pacote.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pacote.Destino)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pacote.DataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pacote.DataFim)
                </td>

                <td>
                    <button type="button" class="btn btn-sm btn-outline-warning" data-bs-toggle="modalAjax" data-bs-target="#editarModalClDa"
                        data-url="@Url.Action($"EditDadosCliente/{item.IdCliente}")">
                        <img src="~/img/edit.png" />
                    </button>

                    <button type="button" class="btn btn-sm btn-outline-warning mt-1" data-bs-toggle="modalAjax" data-bs-target="#detalhesModalClDa"
                        data-url="@Url.Action($"DetailDadosCliente/{item.IdCliente}")">
                        <img src="~/img/ver-detalhes.png" />
                    </button>

                    <button type="button" class="btn btn-sm btn-outline-warning  mt-1" data-bs-toggle="modalAjax" data-bs-target="#deleteModalClDa"
                        data-url="@Url.Action($"DeleteDadosCliente/{item.IdCliente}")">
                        <img src="~/img/delete.png" />
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
