@model Cliente


<div class="modal fade" id="deleteModalClDa">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content bgVidro">
            <div class="modal-header">
                <h5 class="modal-title" id="deletarVModalLabel">Deletar Cadastro.</h5>
                <button type="button" class="btn btn-secondary btn-outline-warning text-white" data-bs-dismiss="modal"
                        aria-label="Close">
                    X
                </button>
            </div>
            <div class="modal-body m-0 p-0 justify-content-center align-content-center">

                <form asp-action="DeleteDadosCliente">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row px-4 py-2">
                        <div class="col-8 col-md-8 col-sm-8 col-lg-8 ">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <input type="hidden" asp-for="IdCliente" />

                                        <label asp-for="Nome" class="control-label text-white mt-1">
                                            Nome: @Model.Nome
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Email" class="control-label text-white mt-1">E-mail: @Model.Email</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Senha" class="control-label text-white mt-1">Senha: ***********</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Idade" class="control-label text-white mt-1">Idade: @Model.Idade</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="CPF" class="control-label text-white mt-1">CPF: @Model.CPF</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group my-0 py-0">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                            <button type="submit" data-bs-save="modal" class="btn btn-secondary btn-outline-warning text-white">Deletar Cadastro</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
