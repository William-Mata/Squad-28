@model TriboParceira


<div class="modal fade bg-transparent" id="detalhesModalPctTrb">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content bgVidro">
            <div class="modal-header">
                <h5 class="modal-title" id="editarVModalLabel">Detalhes Do Pacote</h5>
                <button type="button" class="btn btn-secondary btn-outline-warning text-white" data-bs-dismiss="modal"
                        aria-label="Close">X</button>
            </div>
            <div class="modal-body m-0 p-0 justify-content-center align-content-center">
                <form class="m-0 p-0">
                    <div class="row py-3">
                        <div class="col-5 col-md-5 col-sm-5 col-lg-5 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="@Model.Pacote.Destino" class="control-label text-white mt-1">Destino: @Model.Pacote.Destino</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="@Model.Pacote.Valor" class="control-label text-white mt-1">Valor: R$ @Model.Pacote.Valor</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="@Model.Pacote.Descricao" class="control-label text-white mt-1">Descrição: @Model.Pacote.Descricao</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-5 col-md-5 col-sm-5 col-lg-5 mx-auto">

                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="@Model.Pacote.DataInicio" class="control-label text-white mt-1">Data de Ida: @Model.Pacote.DataInicio</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="@Model.Pacote.DataFim" class="control-label text-white mt-1">Data de Volta: @Model.Pacote.DataFim</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="@Model.Pacote.Imagem" class="control-label text-white mt-1">Imagem: </label>
                                        @if (@Model.Pacote.Id_Imagem != null)
                                        {
                                        <a><img src="/Imagens/VerImagem/@Model.Pacote.Id_Imagem" width="100" height="100" /></a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group m-0 p-0">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
