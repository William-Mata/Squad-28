@model TriboParceira


<div class="modal fade bg-transparent" id="editarModalPctTrb">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content bgVidro">
            <div class="modal-header">
                <h5 class="modal-title" id="editarModalLabel">Alterar Viagem</h5>
                <button type="button" class="btn-close btn-outline-warning bg-warning" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body m-0 p-0 justify-content-center align-content-center">

                <form asp-action="EditPacote" class="m-0 p-0 py-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-6 col-sm-6 col-md-6 col-lg-6 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <input type="hidden" asp-for="IdTribo" />


                                        <label asp-for="NomeTribo" class="control-label text-white mt-1">
                                            Nome da Tribo:
                                        </label>
                                    </div>
                                    <div class="col-9 col-sm-9 col-md-9 col-lg-9 ">
                                        <input asp-for="NomeTribo"
                                               class="form-control text-white bg-transparent btn-outline-warning" readonly />
                                    </div>
                                    <span asp-validation-for="NomeTribo" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Email" class="control-label text-white mt-1">E-mail:</label>
                                    </div>
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3">
                                        <input asp-for="Email"
                                               class="form-control text-white bg-transparent btn-outline-warning" readonly />
                                    </div>
                                    <span asp-validation-for="Email" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Pacote.Descricao" class="control-label text-white mt-1">Descrição:</label>
                                    </div>
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3">
                                        <input asp-for="Pacote.Descricao"
                                               class="form-control text-white bg-transparent btn-outline-warning" readonly />
                                    </div>
                                    <span asp-validation-for="Pacote.Descricao" class="text-warning"></span>
                                </div>
                            </div>

                        </div>

                        <div class="col-5 col-sm-5 col-md-5 col-lg-5 mx-auto">

                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded ">
                                        <label asp-for="Pacote.Destino" class="control-label text-white mt-1">Destino:</label>
                                    </div>
                                    <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                                        <input asp-for="Pacote.Destino"
                                               class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Pacote.Destino" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded ">
                                        <label asp-for="Pacote.Valor" class="control-label text-white mt-1">Valor:</label>
                                    </div>
                                    <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                                        <input asp-for="Pacote.Valor"
                                               class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Pacote.Valor" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded ">
                                        <label asp-for="Pacote.DataInicio" class="control-label text-white mt-1">Data Inicial:</label>
                                    </div>
                                    <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                                        <input asp-for="Pacote.DataInicio"
                                               class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Pacote.DataInicio" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded ">
                                        <label asp-for="Pacote.DataFim" class="control-label text-white mt-1">Data Fim:</label>
                                    </div>
                                    <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                                        <input asp-for="Pacote.DataFim"
                                               class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Pacote.DataFim" class="text-warning"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <div class="row">
                                    <img src="/Imagens/VerImagem/@Model.Pacote.Id_Imagem" />

                                    <form action="/Imagens/UploadImagem" enctype="multipart/form-data" method="post">
                                        <input type="file" name="arquivos" />
                                        <br />
                                        <button>Enviar Imagem</button>
                                    </form>
                                </div>
                            </div>




                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                            <button type="submit" data-bs-save="modal" class="btn btn-outline-warning text-white">Alterar</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
