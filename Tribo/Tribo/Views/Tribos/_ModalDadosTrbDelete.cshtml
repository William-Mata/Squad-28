@model TriboParceira


<div class="modal fade bg-transparent" id="deleteModalTrbDa">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content bgVidro">
            <div class="modal-header">
                <h5 class="modal-title" id="deletarVModalLabel">Deletar Cadastro.</h5>
                <button type="button" class="btn btn-secondary btn-outline-warning text-white" data-bs-dismiss="modal"
                        aria-label="Close">X</button>
            </div>
            <div class="modal-body m-0 p-0 justify-content-center align-content-center">

                <form asp-action="DeleteDadosTribo" class="m-0 p-0">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row py-3">
                        <div class="col-11 col-md-11 col-sm-11 col-lg-11 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-6 col-md-6 col-sm-6 col-lg-6 border border-1 border-warning rounded py-2">
                                        <input type="hidden" asp-for="IdTribo" />

                                        <label asp-for="NomeTribo" class="control-label text-white mt-1">
                                            Nome da Tribo: @Model.NomeTribo
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-8 col-md-8 col-sm-8 col-lg-8 py-2 border border-1 border-warning rounded ">
                                        <label asp-for="Email" class="control-label text-white mt-1">E-mail: @Model.Email</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-5 col-md-5 col-sm-5 col-lg-5 py-2 border border-1 border-warning rounded ">
                                        <label asp-for="Senha" class="control-label text-white mt-1">Senha: **********</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                            <button type="submit" data-bs-save="modal" class="btn btn-secondary btn-outline-warning text-white">Deletar Cadastro</button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
