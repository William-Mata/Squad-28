@model global::Tribo.Models.TriboParceira

@{
    ViewData["Title"] = "DadosTribo";
}

<div class="bgVidro rounded text-center p-3">
    <h1>Dados da Tribo</h1>
</div>

<div class="container-fluid" id="ModalAqui">
</div>

<table class="table text-center mt-2 p-5 text-white bgVidro rounded">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeTribo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>
                @Html.DisplayFor(modelItem => @Model.NomeTribo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => @Model.Email)
            </td>
            <td>
                *********
            </td>
            <td>
                <button type="button" class="btn btn-sm btn-secondary btn-outline-warning" data-bs-toggle="modalAjax" data-bs-target="#editarModalClDa"
                        data-url="@Url.Action($"EditDadosTribo/{@Model.IdTribo}")">
                    <img src="~/img/edit.png" />
                </button>

                <button type="button" class="btn btn-sm btn-secondary btn-outline-warning mt-1" data-bs-toggle="modalAjax" data-bs-target="#detalhesModalClDa"
                        data-url="@Url.Action($"DetailDadosTribo/{Model.IdTribo}")">
                    <img src="~/img/ver-detalhes.png" />
                </button>

                <button type="button" class="btn btn-sm btn-secondary btn-outline-warning  mt-1" data-bs-toggle="modalAjax" data-bs-target="#deleteModalClDa"
                        data-url="@Url.Action($"DeleteDadosTribo/{@Model.IdTribo}")">
                    <img src="~/img/delete.png" />
                </button>
            </td>
        </tr>

    </tbody>
</table>
