@model TriboParceira


<div class="modal fade bg-transparent" id="detalhesModalTrbDa">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content bgVidro">
            <div class="modal-header">
                <h5 class="modal-title" id="editarVModalLabel">Dados da Tribo</h5>
                <button type="button" class="btn-close btn-outline-warning bg-warning" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body m-0 p-0 justify-content-center align-content-center">
                <form class="m-0 p-0 py-3">
                    <div class="row">
                        <div class="col-11 col-md-11 col-sm-11 col-lg-11 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <input type="hidden" asp-for="IdTribo" />

                                        <label asp-for="NomeTribo" class="control-label text-white mt-1">
                                            Nome da Tribo: @Model.NomeTribo
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Email" class="control-label text-white mt-1">E-mail: @Model.Email</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Senha" class="control-label text-white mt-1">Senha: @Model.Senha</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group m-0 p-0 mt-3">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
