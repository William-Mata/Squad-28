@model TriboParceira


<div class="modal fade bg-transparent" id="deleteModalPctTrb">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content bgVidro">
            <div class="modal-header">
                <h5 class="modal-title" id="deletarVModalLabel">Deletar Pacote</h5>
                <button type="button" class="btn-close btn-outline-warning bg-warning" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body m-0 p-0 justify-content-center align-content-center">

                <form asp-action="DeletePacoteTribo" class="m-0 p-0 py-3">
                    <div class="row">
                        <input type="hidden" asp-for="IdTribo" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-5 col-md-5 col-sm-5 col-lg-5 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="@Model.Pacote.Destino" class="control-label text-white mt-1">Destino: @Model.Pacote.Destino</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="@Model.Pacote.Descricao" class="control-label text-white mt-1">Descrição: @Model.Pacote.Descricao</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-5 col-md-5 col-sm-5 col-lg-5 mx-auto">
                                <div class="form-group mb-3">
                                    <div class="row">
                                        <div class="col border border-1 border-warning rounded ">
                                            <label asp-for="@Model.Pacote.Valor" class="control-label text-white mt-1">Valor: R$ @Model.Pacote.Valor</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <div class="row">
                                        <div class="col border border-1 border-warning rounded ">
                                            <label asp-for="@Model.Pacote.DataInicio" class="control-label text-white mt-1">Data de Ida: @Model.Pacote.DataInicio</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <div class="row">
                                        <div class="col border border-1 border-warning rounded ">
                                            <label asp-for="@Model.Pacote.DataFim" class="control-label text-white mt-1">Data de Volta: @Model.Pacote.DataFim</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-warning text-white"
                                        data-bs-dismiss="modal">
                                    Sair
                                </button>
                                <button type="submit" data-bs-save="modal" class="btn btn-outline-warning text-white">Cancelar Viagem</button>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
