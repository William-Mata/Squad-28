@model TriboParceira


<div class="modal fade bg-transparent" id="editarModalTrbDa">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content bgVidro">
            <div class="modal-header">
                <h5 class="modal-title" id="editarModalLabel">Alterar Dados da Tribo</h5>
                <button type="button" class="btn-close btn-outline-warning bg-warning" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body m-0 p-0 justify-content-center align-content-center">

                <form asp-action="EditDadosTribo" class="m-0 p-0 py-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mx-auto px-2">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-2 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded p-0">
                                        <input type="hidden" asp-for="IdTribo" />
                                        <input type="hidden" asp-for="tipoUsuario" value="Tribo" />

                                        <label asp-for="NomeTribo" class="control-label text-white mt-1 ms-2">Nome da Tribo:</label>
                                    </div>
                                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 ">
                                        <input asp-for="NomeTribo" class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="NomeTribo" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-1 col-sm-1 col-md-1 col-lg-1 border border-1 border-warning rounded p-0">
                                        <label asp-for="Email" class="control-label text-white mt-1 ms-2">Email:</label>
                                    </div>
                                    <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                                        <input asp-for="Email"
                                               class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-1 col-sm-1 col-md-1 col-lg-1 border border-1 border-warning rounded p-0">
                                        <label asp-for="Senha" class="control-label text-white mt-1 ms-2">Senha:</label>
                                    </div>
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3">
                                        <input asp-for="Senha" type="password"
                                               class="form-control text-white bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Senha" class="text-warning"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                            <button type="submit" data-bs-save="modal" class="btn btn-outline-warning text-white">Alterar</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
