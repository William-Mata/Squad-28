<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tribo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tribo.styles.css" asp-append-version="true" />
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light text-white colorPadrao w-100 p-0">
            <div class="container-fluid">
                <a class="navbar-brand mx-2 my-auto" asp-area="" asp-controller="Pages" asp-action="Home">

                    <img src="/img/icon-home2.png" alt="Home">
                </a>
                <div class="collapse navbar-collapse mx-2 my-auto" id="collapsibleNavId">
                    <ul class="navbar-nav">
                    </ul>
                </div>
                <button class="navbar-toggler " type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavId">
                    <ul class="navbar-nav">

                        <li class="nav-item mx-2 my-auto">
                            <a class="btn btn-sm btn-outline-warning text-white" asp-area="" asp-controller="Pages"
                               asp-action="Tribos">Tribos</a>
                        </li>
                        <li class="nav-item mx-2 my-auto">
                            <a class="btn btn-sm btn-outline-warning text-white " asp-area="" asp-controller="Pages"
                               asp-action="Sobre">Sobre</a>
                        </li>

                        <li class="nav-item mx-2 my-auto">
                            <a class="btn btn-sm btn-outline-warning text-white" asp-area="" asp-controller="Pages"
                               asp-action="Prevencoes">Prevenções</a>
                        </li>
                        <li class="nav-item mx-2 my-auto">
                            <a class="btn btn-sm btn-outline-warning text-white " asp-area="" asp-controller="Pages"
                               asp-action="Contatos">Contatos</a>
                        </li>
                        <li class="nav-item mx-2 my-auto" style="display: block;">
                            <a class="btn btn-sm btn-outline-warning text-white" asp-area="" asp-controller="Pages"
                               asp-action="Login">Login</a>
                        </li>

                        <li class="nav-item mx-2 my-auto btn-group dropstart" style="display: block;">
                            <button type="button" class="btn btn-sm btn-outline-warning dropdown-toggle text-white" data-bs-toggle="dropdown" aria-expanded="false">
                                Administração
                            </button>
                            <div class="dropdown-menu colorPadrao mx-auto p-0" aria-labelledby="dropdownId" style="margin-top: 32px;">
                    
                                <a class="btn btn-sm btn-outline-warning text-white w-100"
                                   asp-area="" asp-controller="Administracao" asp-action="AdministracaoContatos">Caixa de Contatos</a>
                                <a class="btn btn-sm btn-outline-warning text-white w-100"
                                   asp-area="" asp-controller="Administracao" asp-action="AdministracaoViagens">Lista de Viagens</a>
                            </div>
                        </li>

                        
                       <li class="nav-item mx-2 my-auto btn-group dropstart" style="display: none;">
                            <button type="button" class="btn btn-sm btn-outline-warning dropdown-toggle text-white"
                            data-bs-toggle="dropdown" aria-expanded="false">Tribo Parceira</button>
                          <div class="dropdown-menu colorPadrao mx-auto p-0" aria-labelledby="dropdownId" style="margin-top: 32px;">
                                <a class="w-100 btn btn-sm btn-outline-warning text-white"
                                   asp-area="" asp-controller="Tribo" asp-action="TriboDados">Tribo Dados</a>
                                <a class="w-100 btn btn-sm btn-outline-warning text-white"
                                   asp-area="" asp-controller="Tribo" asp-action="TriboPacotes">Tribo Pacotes</a>
                            </div>
                        </li>

                      <li class="nav-item mx-2 my-auto btn-group dropstart" style="display: none;">
                            <button type="button" class="btn btn-sm btn-outline-warning dropdown-toggle text-white"
                            data-bs-toggle="dropdown" aria-expanded="false">Cliente</button>
                              <div class="dropdown-menu colorPadrao mx-auto p-0" aria-labelledby="dropdownId" style="margin-top: 32px;">
                                <a class="w-100 btn btn-sm btn-outline-warning text-white"
                                   asp-area="" asp-controller="Pages" asp-action="MeusDados">Meus Dados</a>
                                <a class="w-100 btn btn-sm btn-outline-warning text-white"
                                   asp-area="" asp-controller="Pages" asp-action="MinhasViagens">Minhas Viagens</a>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="w-100 border-top footer colorPadrao text-white">
        <div class="container text-center">
            &copy; 2021 - Tribo - <a asp-area="" asp-controller="Pages" asp-action="Contatos">Contatos</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
