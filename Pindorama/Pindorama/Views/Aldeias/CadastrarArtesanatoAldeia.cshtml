@model Artesanato

@{
    ViewData["Title"] = "Cadastrar Artesanato";
}
<div class="row mb-1 py-4 text-center colorPadrao2 rounded">
    <h1>Cadastrar Artesanato</h1>
    <hr />
</div>


<div class="row justify-content-center p-5 colorPadrao2 rounded text-break">
    <form asp-action="CadastrarArtesanatoAldeia">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row justify-content-center">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 mx-auto">
                <div class="form-group mb-3">
                    <div class="row justify-content-center">
                        <div class="col-4 col-sm-3 col-md-3 col-lg-3 m-0 p-0">
                            <span asp-for="Artesanato.Destino" class="input-group-text bg-transparent btn-outline-warning">Tipo: </span>
                        </div>
                        <div class="col-8 col-sm-8 col-md-9 col-lg-8 m-0">
                            <input asp-for="Tipo" class="form-control bg-transparent btn-outline-warning" placeholder="Tipo" />
                        </div>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="row justify-content-center">
                        <div class="col-4 col-sm-3 col-md-3 col-lg-3 m-0 p-0">
                            <span asp-for="Artesanato.Valor" class="input-group-text bg-transparent btn-outline-warning">Valor: </span>
                        </div>
                        <div class="col-8 col-sm-8 col-md-9 col-lg-8 m-0">
                            <input type="number" asp-for="Valor" min="0" placeholder="2.000" class="form-control bg-transparent btn-outline-warning" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-12 col-md-6 col-lg-6 mx-auto">
                <div class="form-group mb-3">
                    <div class="row justify-content-center">
                        <div class="col-5 col-sm-3 col-md-4 col-lg-3 m-0 p-0">
                            <span asp-for="Descricao" class="input-group-text bg-transparent btn-outline-warning">Descrição: </span>
                        </div>
                        <div class="col-7 col-sm-8 col-md-8 col-lg-8 m-0">
                            <textarea rows="5" asp-for="Descricao" class="form-control bg-transparent btn-outline-warning" placeholder="Descrição"> </textarea>
                        </div>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group d-flex mt-5 ">
            <input type="submit" value="Cadastrar" class="btn colorPadrao text-white btn-outline-warning mx-auto" />
        </div>

    </form>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
