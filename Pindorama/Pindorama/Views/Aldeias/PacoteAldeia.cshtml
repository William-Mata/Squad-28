@model global::Pindorama.Models.AldeiaParceira

@{
    ViewData["Title"] = "Pacotes Aldeia";
}


<div class="container-fluid" id="ModalAqui">
</div>

<div class="row m-0 colorPadrao2 shadow-lg rounded py-3">
    <h4 class="text-center mb-3">Aldeia - Pacotes</h4>

    <table class="table text-center text-break">
        <thead>
            <tr>
                <th>
                    Destino
                </th>
                <th>
                    Descricao
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Data de Inicio
                </th>
                <th>
                    Data de Fim
                </th>
                <th>
                    Imagem
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (@ViewBag.Pacote != null)
            {
                foreach (var pacote in @ViewBag.Pacote)
                {
                    <tr>
                        <td>
                            @pacote.Destino
                        </td>
                        <td>
                            @pacote.Descricao
                        </td>
                        <td>
                            R$: @pacote.Valor

                        </td>
                        <td>
                            @pacote.DataInicio

                        </td>
                        <td>
                            @pacote.DataFim

                        </td>
                        <td>
                            @if (@pacote.Id_Imagem != null)
                            {
                                <a><img src="/Imagens/VerImagem/@pacote.Id_Imagem" width="50" height="50" /></a>
                            }

                        </td>

                        <td>
                            <button type="button" class="btn btn-sm colorPadrao btn-outline-warning" data-bs-toggle="modalAjax" data-bs-target="#editarModalPctTrn"
                            data-url="@Url.Action($"EditPacoteAldeia/{@pacote.IdPacote}")">
                                <img src="~/img/edit.png" />
                            </button>

                            <button type="button" class="btn btn-sm colorPadrao btn-outline-warning mt-1" data-bs-toggle="modalAjax" data-bs-target="#detalhesModalPctTrb"
                            data-url="@Url.Action($"DetailPacoteAldeia/{@pacote.IdPacote}")">
                                <img src="~/img/ver-detalhes.png" />
                            </button>

                            <button type="button" class="btn btn-sm colorPadrao btn-outline-warning mt-1" data-bs-toggle="modalAjax" data-bs-target="#deleteModalPctTrb"
                            data-url="@Url.Action($"DeletePacoteAldeia/{@pacote.IdPacote}")">
                                <img src="~/img/delete.png" />
                            </button>
                            <button type="button" class="btn btn-sm colorPadrao btn-outline-warning mt-1" data-bs-toggle="modalAjax" data-bs-target="#addImgModalPct"
                            data-url="@Url.Action($"AddImagemPct/{@pacote.IdPacote}")">
                                <img src="~/img/image.png" />
                            </button>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>

    <div class="row justify-content-center mx-0 py-3">
        <hr />
        <div class="col-12 col-sm-10 col-md-5 col-lg-3">
            <a asp-controller="Aldeias" asp-action="CadastrarPacoteAldeia" class="btn w-100 btn-md text-white colorPadrao btn-outline-warning">
                Cadastrar Pacote
            </a>
        </div>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}