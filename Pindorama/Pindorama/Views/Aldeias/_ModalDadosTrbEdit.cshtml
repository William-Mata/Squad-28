@model AldeiaParceira


<div class="modal fade bg-transparent" id="editarModalTrbDa">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content colorPadrao2">
            <div class="modal-header">
                <h5 class="modal-title" id="editarModalLabel">Alterar Dados da Aldeia</h5>
                <button type="button" class="btn colorPadrao btn-outline-warning text-white" data-bs-dismiss="modal"
                        aria-label="Close">
                    X
                </button>
            </div>
            <div class="modal-body m-0 p-0 justify-content-center align-content-center">
                <form asp-action="EditDadosAldeia">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row px-4 py-3">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6 mx-auto">
                            <input type="hidden" asp-for="IdAldeia" />
                            <input type="hidden" asp-for="Email_User" class="form-control" />
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-4 col-sm-4 col-md-4 col-lg-5 border border-1 border-warning rounded">
                                        <label asp-for="NomeAldeia" class="control-label mt-1 ms-2">Nome da Aldeia:</label>
                                    </div>
                                    <div class="col-8 col-sm-8 col-md-8 col-lg-7">
                                        <input asp-for="NomeAldeia" class="form-control bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="NomeAldeia" ></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Celular" class="control-label mt-1 text-center">
                                            Celular:
                                        </label>
                                    </div>
                                    <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                                        <input asp-for="Celular"
                                               class="form-control bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Celular" ></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-sm-12 col-md-12 col-lg-6 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Estado" class="control-label mt-1 text-center">
                                            Estado:
                                        </label>
                                    </div>
                                    <div class="col-9 col-sm-9 col-md-9 col-lg-9">
                                        <input asp-for="Estado"
                                               class="form-control bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Estado" ></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Cidade" class="control-label mt-1 text-center">
                                            Cidade:
                                        </label>
                                    </div>
                                    <div class="col-9 col-sm-9 col-md-9 col-lg-9">
                                        <input asp-for="Cidade"
                                               class="form-control bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Cidade" ></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="modal-footer">
                            <button type="button" class="btn colorPadrao btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                            <button type="submit" data-bs-save="modal" class="btn colorPadrao btn-outline-warning text-white">Alterar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
