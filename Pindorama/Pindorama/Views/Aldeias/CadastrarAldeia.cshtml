@model AldeiaParceira

@{
    ViewData["Title"] = "Formulario dos Dados da Aldeia";
}

<div class="row mb-1 py-4 text-center colorPadrao2 rounded">
    <h1>Formulario dos Dados da Aldeia - Sejá bem vindo(a)!!!</h1>
    <hr />
</div>


<div class="row justify-content-center p-5 colorPadrao2 rounded">
    <form asp-action="CadastrarAldeia">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row justify-content-center">
            <div class="col-12 col-sm-12 col-md-6 col-lg-5 mx-auto">
                <input asp-for="Email_User" type="hidden"
                       value="@User.Identity.Name" class="form-control" />
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-6 col-sm-4 col-md-4 col-lg-4 border border-1 border-warning rounded ">
                            <label asp-for="NomeAldeia" class="control-label mt-1 text-center">
                                Nome da Aldeia:
                            </label>
                        </div>
                        <div class="col-6 col-sm-8 col-md-8 col-lg-8">
                            <input asp-for="NomeAldeia"
                                   class="form-control bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="NomeAldeia" ></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-4 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                            <label asp-for="Celular" class="control-label mt-1 text-center">
                                Celular:
                            </label>
                        </div>
                        <div class="col-8 col-sm-9 col-md-9 col-lg-8">
                            <input asp-for="Celular"
                                   class="form-control bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="Celular" ></span>
                    </div>
                </div>
            </div>
           <div class="col-12 col-sm-12 col-md-6 col-lg-5 mx-auto">
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-4 col-sm-3 col-md-3 col-lg-3 border border-1 border-warning rounded ">
                            <label asp-for="Estado" class="control-label mt-1 text-center">
                                Estado:
                            </label>
                        </div>
                        <div class="col-8 col-sm-9 col-md-9 col-lg-8">
                            <input asp-for="Estado"
                                   class="form-control bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="Estado" ></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-4 col-sm-3 col-md-4 col-lg-3 border border-1 border-warning rounded ">
                            <label asp-for="Cidade" class="control-label mt-1 text-center">
                                Cidade:
                            </label>
                        </div>
                        <div class="col-8 col-sm-9 col-md-8 col-lg-8">
                            <input asp-for="Cidade"
                                   class="form-control bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="Cidade" ></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
             <div class="row justify-content-center">
                <div class="col-10 col-sm-6 col-md-4 col-lg-3">
                    <input type="submit" value="Cadastrar" class="btn w-100 btn-lg colorPadrao btn-outline-warning text-white"/>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
