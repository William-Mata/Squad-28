@model Artesanato

<div class="modal fade bg-transparent" id="addImgModalArt">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content colorPadrao2">
            <div class="modal-header">
                <h5 class="modal-title" id="editarVModalLabel">Adicionar Imagem</h5>
                <button type="button" class="btn colorPadrao btn-outline-warning text-white" data-bs-dismiss="modal"
                        aria-label="Close">X</button>
            </div>
            <div class="modal-body m-0 p-0">
                <form asp-action="AddImagemArt" enctype="multipart/form-data" method="post">
                    <input type="hidden" asp-for="IdArtesanato" />
                    <div class="form-group  justify-content-center p-3 mt-3">
                        <input type="file" name="arquivos" data-placeholder="Nenhuma imagem foi escolhida"
                        data-btnClass="colorPadrao btn-outline-warning text-white" data-size="nr" 
                        data-buttonBefore="true" data-text="Escolha a Imagem" class="filestyle text-white mx-auto mb-2" />
                        
                        <br />
                        <button class="btn colorPadrao btn-outline-warning text-white">Enviar Imagem</button>
                    </div>
                    <div class="form-group">
                        <div class="modal-footer">
                            <button type="button" class="btn colorPadrao btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script src="~/js/bootstrap-filestyle-2.1.0/src/bootstrap-filestyle.js" asp-append-version="true"> </script>
<script src="~/js/bootstrap-filestyle-2.1.0/src/bootstrap-filestyle.min.js" asp-append-version="true"> </script>
