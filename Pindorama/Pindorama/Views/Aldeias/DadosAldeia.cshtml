@model global::Pindorama.Models.AldeiaParceira

@{
    ViewData["Title"] = "DadosAldeia";
}



<div class="container-fluid" id="ModalAqui">
</div>

<div class="row colorPadrao2 justify-content-center rounded py-3">
    <h1>Dados da Aldeia</h1>
    <table class="table text-center text-break mt-2">
        <thead>
            <tr>
                <th>
                    Nome da Aldeia
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => @Model.NomeAldeia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => @Model.Cidade)
                </td>
                <td>
                    <button type="button" class="btn btn-sm colorPadrao btn-outline-warning" data-bs-toggle="modalAjax" data-bs-target="#editarModalClDa"
                            data-url="@Url.Action($"EditDadosAldeia/{@Model.IdAldeia}")">
                        <img src="~/img/edit.png" />
                    </button>

                    <button type="button" class="btn btn-sm colorPadrao btn-outline-warning mt-1" data-bs-toggle="modalAjax" data-bs-target="#detalhesModalClDa"
                            data-url="@Url.Action($"DetailDadosAldeia/{Model.IdAldeia}")">
                        <img src="~/img/ver-detalhes.png" />
                    </button>

                    <button type="button" class="btn btn-sm colorPadrao btn-outline-warning  mt-1" data-bs-toggle="modalAjax" data-bs-target="#deleteModalClDa"
                            data-url="@Url.Action($"DeleteDadosAldeia/{@Model.IdAldeia}")">
                        <img src="~/img/delete.png" />
                    </button>
                </td>
            </tr>

        </tbody>
    </table>
</div>
