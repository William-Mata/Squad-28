@model AldeiaParceira


<div class="modal fade bg-transparent" id="deleteModalTrbDa">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content colorPadrao2">
            <div class="modal-header">
                <h5 class="modal-title" id="deletarVModalLabel">Deletar Cadastro.</h5>
                <button type="button" class="btn colorPadrao btn-outline-warning text-white" data-bs-dismiss="modal"
                        aria-label="Close">
                    X
                </button>
            </div>
            <div class="modal-body m-0 p-0">
                <form asp-action="DeleteDadosAldeia">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row p-4">
                        <div class="col-12 col-md-6 col-sm-12 col-lg-6 mx-auto">
                            <input type="hidden" asp-for="IdAldeia" />
                            <div class="form-group mb-3">
                                <div class="row justify-content-center">
                                    <div class="col-10 col-md-11 col-sm-10 col-lg-10 border border-1 border-warning rounded py-2">
                                        <label asp-for="NomeAldeia" class="control-label mt-1">
                                            Nome da Aldeia: @Model.NomeAldeia
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row justify-content-center">
                                    <div class="col-10 col-md-11 col-sm-10 col-lg-10 border border-1 border-warning rounded py-2">
                                        <label asp-for="Celular" class="control-label mt-1">
                                            Celular: @Model.Celular
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6 col-sm-12 col-lg-6 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row justify-content-center">
                                    <div class="col-10 col-md-10 col-sm-10 col-lg-10 border border-1 border-warning rounded py-2">
                                        <label asp-for="Estado" class="control-label mt-1">
                                            Estado: @Model.Estado
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row justify-content-center">
                                    <div class="col-10 col-md-10 col-sm-10 col-lg-10 border border-1 border-warning rounded py-2">
                                        <label asp-for="Cidade" class="control-label mt-1">
                                            Cidade: @Model.Cidade
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <div class="modal-footer">
                            <button type="button" class="btn colorPadrao btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                            <button type="submit" data-bs-save="modal" class="btn colorPadrao btn-outline-warning text-white">Deletar Cadastro</button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
