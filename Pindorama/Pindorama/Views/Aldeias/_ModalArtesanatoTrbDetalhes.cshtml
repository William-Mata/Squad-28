@model AldeiaParceira


<div class="modal fade bg-transparent" id="detalhesModalPctTrb">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content colorPadrao2">
            <div class="modal-header">
                <h5 class="modal-title" id="editarVModalLabel">Detalhes Do Artesanato</h5>
                <button type="button" class="btn colorPadrao btn-outline-warning text-white" data-bs-dismiss="modal"
                        aria-label="Close">X</button>
            </div>
            <div class="modal-body m-0 p-0">
                <form class="m-0 p-0">
                    <div class="row py-3 justify-content-center">
                       <div class="col-11 col-md-11 col-sm-11 col-lg-5 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Artesanato[0].Tipo" class="control-label mt-1">Tipo: @ViewBag.Artesanato.Tipo</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Artesanato[0].Valor" class="control-label mt-1">Valor: R$ @ViewBag.Artesanato.Valor</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                       <div class="col-11 col-md-11 col-sm-11 col-lg-5 mx-auto">
                           <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Artesanato[0].Descricao" class="control-label mt-1">Descrição: @ViewBag.Artesanato.Descricao</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Artesanato[0].Imagem" class="control-label mt-1">Imagem: </label>
                                        @if (@ViewBag.Artesanato.Id_Imagem != null)
                                        {
                                        <a><img src="/Imagens/VerImagem/@ViewBag.Artesanato.Id_Imagem" width="100" height="100" /></a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group m-0 p-0">
                        <div class="modal-footer">
                            <button type="button" class="btn colorPadrao btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
