@model global::Pindorama.Models.Cliente

@{
    ViewData["Title"] = "Pacote Cliente";
}


<div class="container-fluid" id="ModalAqui">
</div>

<div class="row colorPadrao2 text-center text-break justify-content-center rounded py-3">
    <h1>Pacote do Cliente</h1>

    <table class="table mt-2">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Origem)
                </th>
                <th>
                    Destino
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Data de Inicio
                </th>
                <th>
                    Data de Fim
                </th>

                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pacote in @ViewBag.pacotes)
            {
                if (pacote != null)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => @Model.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => @Model.Origem)
                        </td>
                        <td>
                            @pacote.Destino
                        </td>
                        <td>
                            R$  @pacote.Valor
                        </td>
                        <td>
                            @pacote.DataInicio
                        </td>
                        <td>
                            @pacote.DataFim
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm colorPadrao btn-outline-warning mt-1" data-bs-toggle="modalAjax" data-bs-target="#detalhesModalPctCl"
                            data-url="@Url.Action($"DetailPacoteCliente/{pacote.IdPacote}")">
                                <img src="~/img/ver-detalhes.png" />
                            </button>

                            <button type="button" class="btn btn-sm colorPadrao btn-outline-warning mt-1" data-bs-toggle="modalAjax" data-bs-target="#deleteModalPctCl"
                            data-url="@Url.Action($"DeletePacoteCliente/{pacote.IdPacote}")">
                                <img src="~/img/delete.png" />
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
