@model Cliente


<div class="modal fade bg-transparent" id="editarModalClDa">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content colorPadrao2">
            <div class="modal-header">
                <h5 class="modal-title" id="editarModalLabel">Alterar Dados do Cliente</h5>
                <button type="button" class="btn colorPadrao btn-outline-warning text-white" data-bs-dismiss="modal"
                        aria-label="Close">
                    X
                </button>
            </div>
            <div class="modal-body m-0 p-0">
                <form asp-action="EditDadosCliente" class="m-0 p-0">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdCliente" />
                    <input type="hidden" asp-for="Pacote" />
                    <input type="hidden" asp-for="Email_User" class="form-control" />
                    <div class="row px-4 py-3">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-2 col-md-2 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Nome" class="control-label mt-1">Nome:</label>
                                    </div>
                                    <div class="col-9 col-sm-9 col-md-9 col-lg-9 ">
                                        <input asp-for="Nome" class="form-control bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Nome" ></span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-2 col-md-2 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Idade" class="control-label mt-1">Idade:</label>
                                    </div>
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-4">
                                        <input asp-for="Idade"
                                               class="form-control bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Idade" ></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-sm-12 col-md-12 col-lg-6 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col-3 col-sm-2 col-md-2 col-lg-2 border border-1 border-warning rounded ">
                                        <label asp-for="CPF" class="control-label mt-1">CPF:</label>
                                    </div>
                                    <div class="col-9 col-sm-9 col-md-9 col-lg-10">
                                        <input asp-for="CPF" type="number" min="10000000000" max="99999999999"
                                               class="form-control bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="CPF" ></span>
                                </div>
                            </div>
                             <div class="form-group">
                                <div class="row">
                                    <div class="col-3 col-sm-2 col-md-2 col-lg-3 border border-1 border-warning rounded ">
                                        <label asp-for="Celular" class="control-label mt-1">Celular:</label>
                                    </div>
                                    <div class="col-9 col-sm-8 col-md-8 col-lg-9">
                                        <input asp-for="Celular"class="form-control bg-transparent btn-outline-warning" />
                                    </div>
                                    <span asp-validation-for="Celular" ></span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="modal-footer">
                            <button type="button" class="btn colorPadrao btn-outline-warning text-white"
                                    data-bs-dismiss="modal">
                                Sair
                            </button>
                            <button type="submit" data-bs-save="modal" class="btn colorPadrao btn-outline-warning text-white">Alterar</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
