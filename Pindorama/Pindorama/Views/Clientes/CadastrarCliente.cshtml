@model global::Pindorama.Models.Cliente
@{
    ViewData["Title"] = "Formulario de Dados do Cliente";
}
<div class="row mb-1 py-4 text-center colorPadrao2 rounded">
    <h1>Formulario de Dados do Cliente</h1>
    <hr />
</div>


<div class="row justify-content-center p-5 colorPadrao2 rounded">
    <form asp-action="CadastrarCliente">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-12 col-md-6 col-lg-5 mx-auto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Email_User" type="hidden"
                       value="@User.Identity.Name" class="form-control" />
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-4 col-sm-2 col-md-4 col-lg-3 border border-1 border-warning rounded">
                            <label asp-for="Nome" class="control-label mt-1 text-center">
                                Nome:
                            </label>
                        </div>
                        <div class="col-8 col-sm-9 col-md-8 col-lg-8">
                            <input asp-for="Nome"
                                   class="form-control bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="Nome" ></span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-4 col-sm-2 col-md-4 col-lg-3 border border-1 border-warning rounded ">
                            <label asp-for="Idade" class="control-label mt-1">Idade:</label>
                        </div>
                        <div class="col-5 col-sm-5 col-md-3 col-lg-3">
                            <input asp-for="Idade"
                                   class="form-control bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="Idade" ></span>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-12 col-md-6 col-lg-5 mx-auto">
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-4 col-sm-2 col-md-4 col-lg-3 border border-1 border-warning rounded ">
                            <label asp-for="CPF" class="control-label mt-1">CPF:</label>
                        </div>
                        <div class="col-8 col-sm-8 col-md-8 col-lg-8">
                            <input asp-for="CPF" type="number" min="10000000000" max="99999999999"
                                   class="form-control bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="CPF" ></span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col-4 col-sm-3 col-md-4 col-lg-3 border border-1 border-warning rounded ">
                            <label asp-for="Celular" class="control-label mt-1">Celular:</label>
                        </div>
                        <div class="col-8 col-sm-8 col-md-6 col-lg-6">
                            <input asp-for="Celular" class="form-control bg-transparent btn-outline-warning" />
                        </div>
                        <span asp-validation-for="Celular" ></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="row justify-content-center">
                <div class="col-10 col-sm-6 col-md-4 col-lg-3">
                <input type="submit" value="Cadastrar" class="btn w-100 btn-lg colorPadrao btn-outline-warning text-white" />
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
        @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        }
