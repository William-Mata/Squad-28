<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pindorama</title>
    <link rel="icon" href="~/favicon.ico"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light text-white colorPadrao py-0 my-0">
            <a class="navbar-brand mx-3" asp-controller="Pages" asp-action="Home">
                <img src="~/img/icon-home.png" alt="Home">
            </a>
            <button class="navbar-toggler btn-sm btn-outline-warning" data-bs-toggle="collapse"
                    data-bs-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavId">
                <ul class="navbar-nav">
                    <li class="nav-item mx-2 my-1">
                        <a class="btn w-100 btn-md btn-outline-warning text-white" asp-controller="Pages"
                           asp-action="Artesanatos">Artesanatos</a>
                    </li>
                    <li class="nav-item mx-2 my-1">
                        <a class="btn w-100 btn-md btn-outline-warning text-white" asp-controller="Pages"
                           asp-action="Aldeias">Aldeias</a>
                    </li>
                    <li class="nav-item mx-2 my-1">
                        <a class="btn w-100 btn-md btn-outline-warning text-white" asp-controller="Pages"
                           asp-action="Sobre">Sobre</a>
                    </li>

                    <li class="nav-item mx-2 my-1">
                        <a class="btn w-100 btn-md btn-outline-warning text-white" asp-controller="Pages"
                           asp-action="Prevencoes">Prevenções</a>
                    </li>
                    <li class="nav-item mx-2 my-1">
                        <a class="btn w-100 btn-md btn-outline-warning text-white " asp-controller="Pages"
                           asp-action="Contatos">Contatos</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </nav>
    </header>



    <main role="main" id="body" class="container-fluid w-100 py-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer colorPadrao text-center align-content-center">
            &copy; 2021 - Pindorama - <a class="text-white" asp-controller="Pages" asp-action="Contatos">Contatos</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
