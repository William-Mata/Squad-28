@model Cliente


<div class="modal fade" id="deleteModalAdmPct">
    <div class="modal-dialog modal-dialog-centered modal-lg ">
        <div class="modal-content colorPadrao2">
            <div class="modal-header">
                <h5 class="modal-title" id="deletarVModalLabel">Cancelar Viagem</h5>
                <button type="button" class="btn text-white btn-outline-warning colorPadrao" data-bs-dismiss="modal"
                        aria-label="Close">X</button>
            </div>
            <div class="modal-body m-0 p-0 justify-content-center align-content-center">

                <form asp-action="DeletePacote">
                    <div class="row p-0 py-3">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-5 col-md-5 col-sm-5 col-lg-5 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <input type="hidden" asp-for="IdCliente" />
                                       <input type="hidden" asp-for="Pacote[0].IdPacote" value="@ViewBag.pacote.IdPacote"/>

                                        <label asp-for="Nome" class="control-label mt-1">
                                            Nome: @Model.Nome
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="Idade" class="control-label mt-1">Idade: @Model.Idade</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label asp-for="CPF" class="control-label mt-1">CPF: @Model.CPF</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label class="control-label mt-1">
                                            Valor: @ViewBag.pacote.Valor
                                           
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-5 col-md-5 col-sm-5 col-lg-5 mx-auto">
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label class="control-label mt-1">
                                            Destino: @ViewBag.pacote.Destino
                                            
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label class="control-label mt-1">
                                            Origem: @Model.Origem
                                          
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label class="control-label mt-1">
                                            Data Ida: @ViewBag.pacote.DataInicio
                                            
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <div class="row">
                                    <div class="col border border-1 border-warning rounded ">
                                        <label  class="control-label mt-1">
                                            Data Volta: @ViewBag.pacote.DataFim
                                           
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <div class="modal-footer">
                                <button type="button" class="btn colorPadrao btn-outline-warning text-white"
                                        data-bs-dismiss="modal">
                                    Sair
                                </button>
                                <button type="submit" data-bs-save="modal" class="btn colorPadrao btn-outline-warning text-white">Cancelar Viagem</button>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
