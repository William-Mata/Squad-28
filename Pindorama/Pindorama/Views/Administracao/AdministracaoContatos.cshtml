@model global::Pindorama.Models.Contato

@{
    ViewData["Title"] = "Administracao";
}


<div class="container-fluid" id="ModalAqui">
</div>


<div class="row colorPadrao2 text-center text-break justify-content-center rounded py-3">
     <h1>Administração - Contatos</h1>

    <table class="table mt-2">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mensagem)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.contatos)
            {
                <tr>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Mensagem
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm colorPadrao btn-outline-warning" data-bs-toggle="modalAjax" data-bs-target="#editarModalAdmCnt"
                            data-url="@Url.Action($"EditContato/{item.IdContato}")">
                            <img src="~/img/edit.png" />
                        </button>

                        <button type="button" class="btn btn-sm colorPadrao btn-outline-warning mt-1" data-bs-toggle="modalAjax" data-bs-target="#detalhesModalAdmCnt"
                            data-url="@Url.Action($"DetailsContato/{item.IdContato}")">
                            <img src="~/img/ver-detalhes.png" />
                        </button>

                        <button type="button" class="btn btn-sm colorPadrao btn-outline-warning  mt-1" data-bs-toggle="modalAjax" data-bs-target="#deleteModalAdmCnt"
                            data-url="@Url.Action($"DeleteContato/{item.IdContato}")">
                            <img src="~/img/delete.png" />
                        </button>
                    </td> 
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

