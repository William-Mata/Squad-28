@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Alterar Senha";
    ViewData["ActivePage"] = "Alterar Senha";
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <h3>@ViewData["Title"]</h3>
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control bg-transparent btn-outline-warning" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword" class="form-label">Senha antiga</label>
                <span asp-validation-for="Input.OldPassword" ></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control bg-transparent btn-outline-warning" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword" class="form-label">Nova senha</label>
                <span asp-validation-for="Input.NewPassword" ></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control bg-transparent btn-outline-warning" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar </label>
                <span asp-validation-for="Input.ConfirmPassword" ></span>
            </div>
            <button type="submit" class="w-100 btn colorPadrao btn-outline-warning text-white">Alterar senha</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
