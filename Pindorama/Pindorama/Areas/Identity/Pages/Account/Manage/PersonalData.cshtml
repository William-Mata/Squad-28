@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Dados da Conta";
    ViewData["ActivePage"] = "Dados da Conta";
}


<div class="row">
    <div class="col-md-6">
        <h3>@ViewData["Title"]</h3>
        <p>Sua conta contém dados pessoais que você nos forneceu. Esta página permite que você baixe ou exclua esses dados.</p>
        <p>
            <strong class="text-danger">A exclusão desses dados removerá permanentemente sua conta e isso não poderá ser recuperado.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn text-white colorPadrao btn-outline-warning mb-2" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn text-white btn-danger">Excluir Conta</a>
        </p>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
