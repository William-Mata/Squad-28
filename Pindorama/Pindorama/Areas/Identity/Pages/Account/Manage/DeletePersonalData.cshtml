@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Excluir dados da conta";
    ViewData["ActivePage"] = "Excluir dados da conta";
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>A exclusão desses dados removerá permanentemente sua conta e isso não poderá ser recuperado.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control colorPadrao2  btn-outline-warning" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
            <button type="submit" class="btn mt-3 btn-danger text-white">Excluir Conta</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
